<%= render "shared/header" %>
<div id="show_review">
  <p id="notice"><%= notice %></p>

  <div class="boxContainer">
    <div class="box">
      <p>
      <%= image_tag @review.portrait.variant(resize_to_limit: [100, 100]) %>
      </p>
    </div>


    <div class="box">
      <p>
      <strong>タイトル:</strong>
      <%= @review.title %>
      </p>

      <p>
      <strong>発行:</strong>
      <%= @review.published.strftime("%Y年%m月") %>
      </p>

      <p>
      <strong>著者:</strong>
      <%= @review.author %>
      </p>

      <p>
      <strong>カテゴリ:</strong>
      <%= @review.category_id %>
      </p>

      <p>
      <strong>点数:</strong>
      <%= @review.score %>
      </p>
    </div>
  </div>

  <div class="md-content">
    <div class="md-inner">
      <%= markdown(@review.content).html_safe %>
    </div>
  </div>

  <%= link_to '編集', edit_review_path(@review) %> |
  <%= link_to '一覧へ戻る', reviews_path %>
</div>
<%= render "shared/footer" %>
